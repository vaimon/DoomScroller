<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoomScroller" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/purple_extra_dark</item>
        <item name="colorAccent">@color/accent_orange_dark</item>
    </style>

    <style name="Theme.DoomScroller.Splash" parent="Theme.DoomScroller">
        <item name="colorPrimaryDark">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">?attr/backgroundColor</item>
        <item name="colorOnPrimary">?attr/colorOnBackground</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.DoomScroller.Launcher">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>